{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/IGSN/igsn-json/master/schema.igsn.org/json/description/spatial/v0.1/core.schema.json",
  "title": "IGSN registry metadata schema",
  "description": "Test schema for spatial stuff for Doug",
  "type": "object",
  "properties": {
    "spatialCoverage": {
      "type": "object",
      "geometry": { "$ref": "https://geojson.org/schema/Geometry.json" },
      "crs": { "$ref": "crs.schema.json" },
      "required": ["geometry"]
    }
  }
}
